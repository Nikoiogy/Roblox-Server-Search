{
  "manifest_version": 2,
  "name": "Roblox Server Search",
  "version": "0.2.0",
  "description": "A modern tool to find and join players in Roblox games and track user activity",
  "homepage_url": "https://github.com/Adenics/Roblox-Server-Search",

  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "*://*.roblox.com/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "96": "icons/icon96.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "contact.flyover468@passmail.com",
      "strict_min_version": "79.0"
    }
  },

  "web_accessible_resources": [
    "icons/*"
  ]
}