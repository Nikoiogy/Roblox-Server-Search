{
  "manifest_version": 2,
  "name": "Roblox Server Search",
  "version": "0.2.0",
  "description": "A modern tool to find and join players in Roblox games and track user activity",
  "homepage_url": "https://github.com/Adenics/Roblox-Server-Search",

  "permissions": [
      "activeTab",
      "storage",
      "cookies",
      "*://*.roblox.com/*"
  ],

  "background": {
      "page": "src/background/background.html",
      "persistent": true
  },

  "browser_action": {
      "default_popup": "src/popup/index.html",
      "default_icon": {
          "16": "src/assets/icons/icon16.png",
          "32": "src/assets/icons/icon32.png",
          "48": "src/assets/icons/icon48.png",
          "96": "src/assets/icons/icon96.png",
          "128": "src/assets/icons/icon128.png"
      }
  },

  "icons": {
      "16": "src/assets/icons/icon16.png",
      "32": "src/assets/icons/icon32.png",
      "48": "src/assets/icons/icon48.png",
      "96": "src/assets/icons/icon96.png",
      "128": "src/assets/icons/icon128.png"
  },

  "browser_specific_settings": {
      "gecko": {
          "id": "contact.flyover468@passmail.com",
          "strict_min_version": "79.0"
      }
  },

  "web_accessible_resources": [
      "src/assets/icons/*",
      "src/background/*.js",
      "src/popup/*.js"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "author": "Adenics",
  
  "minimum_chrome_version": "80",
  
  "incognito": "spanning"
}